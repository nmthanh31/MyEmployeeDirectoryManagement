<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FF090B14"
    >
    <TextView
        android:id="@+id/tvSetting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cài đặt"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/tvName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="190dp"
        app:layout_constraintTop_toTopOf="@id/tvSetting"
        android:textColor="@color/white"
        android:text="Name"
        android:textSize="26dp"
        android:textAlignment="center"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnChangePassword"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginTop="70dp"
        app:layout_constraintTop_toTopOf="@id/tvName"
        android:background="@drawable/btn_setting_activity"
        android:drawableLeft="@drawable/ic_lock"
        android:padding="20dp"
        android:text="Change Password"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="23dp"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnLogOut"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toTopOf="@id/btnChangePassword"
        android:background="@drawable/btn_setting_activity"
        android:drawableLeft="@drawable/ic_log_out"
        android:padding="20dp"
        android:text="Log Out"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="23dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>